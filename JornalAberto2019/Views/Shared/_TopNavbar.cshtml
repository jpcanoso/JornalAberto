<div id="nav-header">
    <div class="container">
        <nav id="main-nav">
            <div class="nav-logo">
                <a href="" class="logo"><img src="~/assets/images/logo.png" alt=""></a>
            </div>
            <ul class="main-nav nav navbar-nav">
                <li class="active"><a href="">@Resources.Home</a></li>
                @foreach (var cat in ViewBag.Categorias)
                {
                    if (cat.Menu)
                    {
                        <li><a href="/categorias/@cat.CategoriaID">@cat.NomeCategoria</a></li>
                    }
                }

            </ul>
        </nav>
        <div class="button-nav">
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
