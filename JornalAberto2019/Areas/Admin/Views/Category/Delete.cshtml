@model JornalAberto2019.Models.Categorias

@{
    ViewBag.Title = Resources.Delete;
}

<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">
            @ViewBag.Title
        </h2>
    </div>
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel-body">
            <div class="table-responsive">

                <h3>@Resources.AreYouSure</h3>
                <div>
                    <h4>@Resources.Categories</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.NomeCategoria)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.NomeCategoria)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Menu)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Menu)
                        </dd>

                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="@Resources.Delete" class="btn btn-default" /> |
                            @Html.ActionLink(Resources.Back, "Index")
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>