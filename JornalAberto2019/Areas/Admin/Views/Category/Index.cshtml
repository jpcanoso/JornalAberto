@model IEnumerable<JornalAberto2019.Models.Categorias>

@{
    ViewBag.Title = Resources.Index;
}

<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">
            @ViewBag.Title
        </h2>
    </div>
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.NomeCategoria)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Menu)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NomeCategoria)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Menu)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Category", new { id = item.CategoriaID })" class="btn btn-primary" data-toggle="tooltip" data-placement="bottom" title="@Resources.Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="@Url.Action("Details", "Category", new { id = item.CategoriaID })" class="btn btn-info" data-toggle="tooltip" data-placement="bottom" title="@Resources.Details">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="@Url.Action("Delete", "Category", new { id = item.CategoriaID })" class="btn btn-danger" data-toggle="tooltip" data-placement="bottom" title="@Resources.Delete">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
}