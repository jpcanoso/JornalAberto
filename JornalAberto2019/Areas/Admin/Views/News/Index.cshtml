@model IEnumerable<JornalAberto2019.Models.Noticias>

@{
    ViewBag.Title = Resources.ListNews;
}

<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">
            @ViewBag.Title
        </h2>
    </div>
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.AprovadaPor.Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.InseridaPor.Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DataNoticia)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Titulo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Descricao)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NumeroVisualizacoes)
                            </th>
                            <th>
                                @Resources.Categories
                            </th>
                            <th>@Resources.Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AprovadaPor.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InseridaPor.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DataNoticia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Titulo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descricao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NumeroVisualizacoes)
                                </td>
                                <td>
                                    @{
                                        foreach (var categoria in item.ListaCategorias)
                                        {
                                            @categoria.NomeCategoria <br />
                                        }
                                    }
                                </td>
                                <td>
                                    @if (item.Aprovada)
                                    {
                                        <a href="@Url.Action("Disapprove", "News", new { id = item.NoticiaID })" class="btn btn-danger">
                                            <i class="fas fa-thumbs-down"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Approve", "News", new { id = item.NoticiaID })" class="btn btn-success">
                                            <i class="fas fa-thumbs-up"></i>
                                        </a>
                                    }
                                    <a href="@Url.Action("Edit", "News", new { id = item.NoticiaID })" class="btn btn-primary" data-toggle="tooltip" data-placement="bottom" title="@Resources.Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("Details", "News", new { id = item.NoticiaID })" class="btn btn-info" data-toggle="tooltip" data-placement="bottom" title="@Resources.Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", "News", new { id = item.NoticiaID })" class="btn btn-danger" data-toggle="tooltip" data-placement="bottom" title="@Resources.Delete">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->

@section Scripts {
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
}
