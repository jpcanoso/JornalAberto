@model IEnumerable<JornalAberto2019.Areas.Admin.Models.RoleViewModel>

@{
    ViewBag.Title = Resources.ListRoles;
}


<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">
            @ViewBag.Title
        </h2>
    </div>
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>@Resources.Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    <a href="@Url.Action("Details", "Role", new { id = item.Id })" class="btn btn-info" data-toggle="tooltip" data-placement="bottom" title="@Resources.Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    @if (!(item.Name == "Administrador" || item.Name == "Moderador" || item.Name == "Utilizador"))
                                    {
                                        <a href="@Url.Action("Edit", "Role", new { id = item.Id })" class="btn btn-primary" data-toggle="tooltip" data-placement="bottom" title="@Resources.Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", "Role", new { id = item.Id })" class="btn btn-danger" data-toggle="tooltip" data-placement="bottom" title="@Resources.Delete">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->

@section Scripts {
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
}